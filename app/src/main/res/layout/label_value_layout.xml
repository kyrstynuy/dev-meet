<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_padding_medium">

    <TextView
        android:id="@+id/label_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_default"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/value_holder"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/value_holder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/text_medium"
        android:layout_marginStart="@dimen/margin_padding_small"
        android:ellipsize="end"
        android:textAlignment="viewEnd"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/label_holder"
        app:layout_constraintTop_toTopOf="@id/label_holder"/>

</androidx.constraintlayout.widget.ConstraintLayout>
